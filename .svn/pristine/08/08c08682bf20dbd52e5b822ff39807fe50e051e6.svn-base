                $("#popup").hide();
            <?php }
            } else {  ?>
            $("#popup_bg").hide();
            $("#popup").hide();
        <?php } ?>
        
        $("#skip").click(function () {
            
           <?php
                setcookie('atgo-Skipped', true,time()+86400,'/'); // 1 day
            ?>
            $("#popup_bg").hide();
            $("#popup").hide();
        });
        
        $("#continue_button").click(function () {
            $.ajax({//starting ajax request
            type: "POST",
            url: "Customer/loginAjax",
            data: {"c_email": $("#demo-name").val(), "c_password": $("#demo-password").val()},
            success: function (found) {
                if(found=='no')
                {   
                    $('#login-error').show();
                }
                else
                {
                    window.location.href='<?php echo base_url(); ?>';
                }
            },
            error: function(xhr, textStatus, errorThrown){
            }
        });
        });
		
 
    });
    function likeFun(post_id, login, user_id)
    {
        if (login == '0')
        {
            window.location.href = "<?php echo base_url().'Customer/login'; ?>";
            return false;
        }
        var countrVal = $('#like'+post_id).attr('rel');
        if (countrVal == '')
        {
            var inc = 1;
            $('#like'+post_id).attr('rel', '1');
        }
        else {
            inc = -1;
            $('#like'+post_id).attr('rel', '');
        }
       
        $.ajax({//starting ajax request
            type: "POST",
            url: "<?php echo base_url()?>home/check_count",
            data: {"post_id": post_id, "count": inc, "user_id": user_id},
            success: function (count) {
                $("#like" + post_id).html(count);
                if(inc==1)
                {
                 $('#like'+post_id).addClass( "active" );
                }
                else{
                    $('#like'+post_id).removeClass('active');
                }
                
            }
        });
    }
   
</script>
<script type="text/javascript">
$(document).ready(function() {
	var track_load = 0; //total loaded record group(s)
	var loading  = false; //to prevents multipal ajax loads
	var total_groups = <?php echo $total_groups= ceil(count($allProducts)/1)?>; //total record group(s)
	
	//$('#results').load("home/autoload_process", {'group_no':track_load}, function() {track_load++;}); //load first group  bs code for first time
	
	$(window).scroll(function() { 
	
	
	//detect page scroll
		<!--if($(window).scrollTop() + $(window).height() >= $(document).height()) { --> //user scrolled to bottom of the page?
		
		 if ($(window).scrollTop() +1 >= $(document).height() - $(window).height()) {
			
			
			if(track_load <= total_groups && loading==false) //there's more data to load
			{
				loading = true; //prevent further ajax loading
				$('.animation_image').show(); //show loading image
				
				//load data from the server using a HTTP POST request
				$.post('home/autoload_process',{'group_no': track_load}, function(data){
									
					$("#results").append(data); //append received data into the element

					//hide loading image
					$('.animation_image').hide(); //hide loading image once data is received
					
					track_load++; //loaded group increment
					loading = false; 
				
				}).fail(function(xhr, ajaxOptions, thrownError) { //any errors?
					
					alert(thrownError); //alert with HTTP error
					$('.animation_image').hide(); //hide loading image
					loading = false;
				
				});
				
			}
		}
	});
});
</script>

